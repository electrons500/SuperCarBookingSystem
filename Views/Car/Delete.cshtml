@model SuperCarBookingSystem.Models.Car
@{
    ViewData["Title"] = "Delete Car";
}

<h2>Deleting @Model.Model</h2>
<hr />
<br />
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
            <use xlink:href="#exclamation-triangle-fill" />
        </svg>
        <div>
            @ViewData["ErrorMessage"]
        </div>
    </div>
}
<br>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Model"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Model
        </dd>
        <dt class="col-sm-2">
            <label asp-for="NumberPlate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.NumberPlate
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Location"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.Location
        </dd>


    </dl>
</div>
<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete car" class="btn btn-danger"
        onclick="javascript: return confirm('Are you sure you want to delete this car?');" />
</form>


<div>
    <a asp-controller="Car" asp-action="Index">Back to list</a>
</div>
