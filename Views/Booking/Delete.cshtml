@model SuperCarBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}


<h2>Delete booking</h2>
<hr />
<br/>
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
            <use xlink:href="#exclamation-triangle-fill" />
        </svg>
        <div>
            @ViewData["ErrorMessage"]
        </div>
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="CarModel"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.CarModel
        </dd>
        <dt class="col-sm-2">
            <label asp-for="StartDate"></label>
        </dt>
        <dd class="col-sm-10">
            @Model?.StartDate
        </dd>
    </dl>
    <dt class="col-sm-2">
        <label asp-for="EndDate"></label>
    </dt>
    <dd class="col-sm-10">
        @Model?.EndDate
    </dd>
</div>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CarId" />
    <input type="submit" value="Delete booking" class="btn btn-danger"
        onclick="javascript: return confirm('Are you sure you want to delete this booking?');" />
</form>

<div>
    <a asp-controller="Booking" asp-action="Index">Back to list</a>
</div>
